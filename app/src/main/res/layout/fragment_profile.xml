<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/profile_topbar"
        android:background="@drawable/border_bottom_grey">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/icon_shop" />

        <com.cups.soscom.ui.UIText
            android:id="@+id/id_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#95989A"
            android:background="@android:color/transparent"
            android:text="PROFILE"
            android:layout_centerInParent="true" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scrollbars="none"
        android:background="@color/base_grey_light"
        android:layout_below="@+id/profile_topbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/frg_profile_item_account"
                android:clickable="true"
                android:background="@color/base_white">

                <com.cups.soscom.ui.UIText
                    android:id="@+id/profile_text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="50dp"
                    android:layout_centerVertical="true"
                    android:padding="15dp"
                    android:text="Hy, John Doe"
                    android:textSize="16sp"
                    android:textColor="@color/base_grey_half" />

                <ImageButton
                    android:id="@+id/icon_test"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:padding="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_menu_profile" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/base_white"
                android:id="@+id/frg_profile_item_address"
                android:clickable="true"
                android:layout_marginTop="10dp">

                <com.cups.soscom.ui.UIText
                    android:id="@+id/profile_delivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="50dp"
                    android:layout_centerVertical="true"
                    android:padding="15dp"
                    android:text="Delivery Address"
                    android:textSize="16sp"
                    android:textColor="@color/base_grey_half"
                    android:background="@drawable/border_bottom_grey"/>

                <ImageButton
                    android:id="@+id/icon_map"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:padding="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/icon_map" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frg_profile_item_list_order"
                android:clickable="true"
                android:background="@color/base_white">

                <com.cups.soscom.ui.UIText
                    android:id="@+id/profile_listorder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="50dp"
                    android:layout_centerVertical="true"
                    android:padding="15dp"
                    android:text="List Order"
                    android:textSize="16sp"
                    android:textColor="@color/base_grey_half"
                    android:background="@drawable/border_bottom_grey"/>

                <ImageButton
                    android:id="@+id/icon_listorder"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:padding="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_listorder" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frg_profile_item_notification"
                android:clickable="true"
                android:background="@color/base_white">

                <com.cups.soscom.ui.UIText
                    android:id="@+id/profile_notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="50dp"
                    android:layout_centerVertical="true"
                    android:padding="15dp"
                    android:text="Notification"
                    android:textSize="18sp"
                    android:textColor="@color/base_grey_half" />

                <ImageButton
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:padding="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_notif2" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/base_white"
                android:id="@+id/frg_profile_item_privacy"
                android:clickable="true"
                android:layout_marginTop="10dp">

                <com.cups.soscom.ui.UIText
                    android:id="@+id/profile_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="50dp"
                    android:layout_centerVertical="true"
                    android:padding="15dp"
                    android:text="Privacy"
                    android:textSize="16sp"
                    android:textColor="@color/base_grey_half"
                    android:background="@drawable/border_bottom_grey"/>

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:padding="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_privacy" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frg_profile_item_settings"
                android:clickable="true"
                android:background="@color/base_white">

                <com.cups.soscom.ui.UIText
                    android:id="@+id/profile_account_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="50dp"
                    android:layout_centerVertical="true"
                    android:padding="15dp"
                    android:text="Account Setting"
                    android:textSize="16sp"
                    android:textColor="@color/base_grey_half"
                    android:background="@drawable/border_bottom_grey"/>

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:padding="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_acsetting" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frg_profile_item_help"
                android:clickable="true"
                android:background="@color/base_white">

                <com.cups.soscom.ui.UIText
                    android:id="@+id/profile_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="50dp"
                    android:layout_centerVertical="true"
                    android:padding="15dp"
                    android:text="Help"
                    android:textSize="16sp"
                    android:textColor="@color/base_grey_half" />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:padding="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_help" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/base_white"
                android:id="@+id/frg_profile_item_logout"
                android:clickable="true"
                android:layout_marginTop="10dp">

                <com.cups.soscom.ui.UIText
                    android:id="@+id/profile_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="50dp"
                    android:layout_centerVertical="true"
                    android:padding="15dp"
                    android:text="Log Out"
                    android:textColor="@color/base_grey_half"
                    android:textSize="16sp"
                    android:background="@drawable/border_bottom_grey"/>

                <ImageButton
                    android:id="@+id/id_address"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:padding="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_logout" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
