<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_white"
    android:paddingBottom="10dp"
    android:layout_marginBottom="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/item_list_frg_home_line_top">

        <ImageView
            android:id="@+id/item_list_frg_home_avatar"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside" />

        <com.cups.soscom.ui.UIText
            android:id="@+id/item_list_frg_home_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:text="Shoesbox.co"
            android:textColor="#383838"
            android:textSize="16dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_list_frg_home_line_second"
        android:layout_below="@+id/item_list_frg_home_line_top">

        <ImageView
            android:id="@+id/item_list_frg_home_bigimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_alignLeft="@+id/item_list_frg_home_bigimage"
            android:layout_alignRight="@+id/item_list_frg_home_bigimage"
            android:layout_alignBottom="@+id/item_list_frg_home_bigimage"
            android:background="#80000000"
            android:id="@+id/RelativeLayout">

            <com.cups.soscom.ui.UIText
                android:id="@+id/item_list_frg_home_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/item_list_frg_home_linear_price"
                android:text="Adidas Superstar Primeknit" />

            <LinearLayout
                android:id="@+id/item_list_frg_home_linear_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true">

                <com.cups.soscom.ui.UIText
                    android:id="@+id/item_list_frg_home_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="400K"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_shop" />

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_list_frg_home_line_second"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp">

                <ImageButton
                    android:id="@+id/item_list_frg_home_icon_love"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:padding="3dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_love" />

                <com.cups.soscom.ui.UIText
                    android:id="@+id/item_list_frg_home_stat_love"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12.2K"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/base_grey"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp">

                <ImageButton
                    android:id="@+id/item_list_frg_home_icon_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:adjustViewBounds="true"
                    android:padding="3dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_comment" />

                <com.cups.soscom.ui.UIText
                    android:id="@+id/item_list_frg_home_stat_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="12.2K"
                    android:textColor="@color/base_grey"
                    android:textSize="14dp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>