<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_white">

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <com.cups.soscom.ui.UIText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_grey"
            android:textSize="14sp"
            android:text="Alexander Christie"
            android:id="@+id/item_list_frg_search_fullname"
            android:layout_marginBottom="10dp"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_list_frg_search_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            app:riv_corner_radius="7dip"
            app:riv_border_width="1dip"
            app:riv_border_color="@android:color/transparent"
            app:riv_mutate_background="true"
            app:riv_tile_mode="repeat"
            app:riv_oval="false"/>

        <com.cups.soscom.ui.UIText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_grey"
            android:textSize="15sp"
            android:text="Social Shop 1"
            android:id="@+id/item_list_frg_search_title" />

        <com.cups.soscom.ui.UIText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_grey_half"
            android:textSize="15sp"
            android:text="IDR 450.000"
            android:id="@+id/item_list_frg_search_price" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/icon_menu_love"
                android:layout_gravity="center_vertical"/>

            <com.cups.soscom.ui.UIText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/base_grey"
                android:layout_marginLeft="5dp"
                android:textSize="13sp"
                android:text="4.8"
                android:id="@+id/item_list_frg_search_rate"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>