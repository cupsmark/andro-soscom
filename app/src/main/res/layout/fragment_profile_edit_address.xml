<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/profile_edit_address_topbar"
        android:background="@drawable/border_bottom_grey">

        <ImageButton
            android:id="@+id/frg_profile_edit_address_btn_cancel"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/icon_close_black" />

        <com.cups.soscom.ui.UIText
            android:id="@+id/id_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#95989A"
            android:background="@android:color/transparent"
            android:text="EDIT ADDRESS"
            android:layout_centerInParent="true" />

        <ImageButton
            android:id="@+id/frg_profile_edit_address_btn_apply"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/icon_check_black" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@color/base_grey_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/base_white"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_bottom_grey">

                <com.cups.soscom.ui.UIText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_grey_half"
                    android:textSize="16sp"
                    app:fontType="semibold"
                    android:text="Address"
                    android:layout_marginBottom="10dp"/>

                <com.cups.soscom.ui.UIEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:textColor="@color/base_grey"
                    android:textSize="15sp"
                    android:inputType="text"
                    android:ems="10"
                    android:gravity="left|top"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_bottom_grey">

                <com.cups.soscom.ui.UIText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_grey_half"
                    android:textSize="16sp"
                    app:fontType="semibold"
                    android:text="Phone Number"
                    android:layout_marginBottom="5dp"/>

                <com.cups.soscom.ui.UIEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:textColor="@color/base_grey"
                    android:textSize="15sp"
                    android:inputType="text"
                    android:ems="10"
                    android:gravity="left|top"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>
